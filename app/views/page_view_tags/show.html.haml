.module
  #tag
    %h3= "Page View Tag for #{h @tag.product.name}"
    .tag_actions
      = link_to "Edit", edit_page_view_tag_path(@tag), :class => "button edit"
      = link_to "Delete", page_view_tag_path(@tag), :confirm => "Are you sure?", :method => "delete", :class => "button"  
  %ul
    %li
      %strong
        Location:
      %span
        = h @tag.location
    %li
      %strong
        Description:
      %span
        = h @tag.description

.module#key_val_table
  %h3
    = "Add Key/Value Pairs <span class='instruction'>(a.k.a. Meta Tags)</span>"
  #kvp_form
    = render :partial => "key_value_pairs/form", :locals => { :key_value_pair => KeyValuePair.new(:tag => @tag) }
  
  #kvp_list
  %h3 
    = "Key Value Pairs <span class='instruction'>(a.k.a. Meta Tags)</span>"
  = render :partial => 'key_value_pairs/list'


  

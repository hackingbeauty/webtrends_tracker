- if @page_view_tags and !@page_view_tags.blank?
  %table.main-table.page_view
    %thead
      %tr
        %th.location
          Location
        %th.description
          Description
        %th.type
          Type
        - if params[:action] == "index"
          %th
            Product
        %th.action
    %tbody
      - @page_view_tags.each do |tag|   
        %tr{:class=>"#{cycle('odd', 'even')} row"}
          %td
            = tag.location
          %td
            = tag.description
          %td
            = tag.type
          - if params[:action] == "index"
            %td
              = tag.product.name
          %td
            = link_to("Delete", tag, :class => "delete button", :method => :delete, :confirm => "Delete this tag?")
    %tfoot
      %tr

- if @tags and !@tags.blank?
  %table
    %thead
      %tr
        %th
          Hook
        %th
          Location
        %th
          Description
        - if params[:action] == "index"
          %th
            Product
        %th
    %tbody
      - @tags.each do |tag|
        %tr
          %td  
            = link_to tag.hook, tag
          %td
            = tag.location
          %td
            = tag.description
          - if params[:action] == "index"
            %td
              = tag.product.name
          %td
            = link_to("[x]", tag, :method => :delete, :confirm => "Delete this tag?")
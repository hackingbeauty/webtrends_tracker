#new-tag
  = f.error_messages
  #radio
    .radio-section
      %label
        Mulitrack
      %input{:type => "radio", :value=> "multitrack", :checked => "checked", :name => "tag[kind]"}
    .radio-section
      %label
        Page View
      %input{:type => "radio", :value=> "page_view", :name => "tag[kind]"}
  .form-row
    = f.text_field :hook
  .form-row
    = f.text_field :location
  .form-row
    = f.text_area  :description, :cols => '70'
  .form-row
    = f.hidden_field :product_id, :value => @product.id, :class => 'hidden'
    = f.submit "Save", :id => "submit", :class => "button"

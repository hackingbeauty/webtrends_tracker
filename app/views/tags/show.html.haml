%h1= "#{h @tag.product.name} : #{h @tag.hook}"

= link_to "Edit", edit_tag_path(@tag)
|
= link_to "Delete", tag_path(@tag), :confirm => "Are you sure?", :method => "delete"

%table
  %tr
    %th{ :width => "25%" } Name
    %th Value
  %tr
    %td Hook
    %td= h @tag.hook
  %tr
    %td Location
    %td= h @tag.location
  %tr
    %td Description
    %td= h @tag.description

%h1 Key Value Pairs
= render :partial => 'key_value_pairs/list'
%h1 New Key Value Pair
#kvp_form
  = render :partial => "key_value_pairs/form", :locals => { :key_value_pair => KeyValuePair.new(:tag => @tag) }

%h1 Screenshot
- if @tag.snapshot
  .snapshot
    = image_tag @tag.snapshot.url(:normal)
= render :partial => "screen_shot_form", :locals => { :tag => @tag }
  

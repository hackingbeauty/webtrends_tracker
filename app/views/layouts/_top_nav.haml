#top-nav.span-24
  - if logged_in?
    %ul
      %li.search
        %form{ :action => '/search', :method => 'get' } 
          %input{:id=> 'search-input', :type => 'text', :name => 'search_input', :value => 'Search', :tabindex => 1, :size => 28}
          %input{:id => 'search-btn', :type => 'button', :name=> 'search'}
      %li
        = link_to "All Tags", products_path
      %li
        = link_to "Export Tags", spreadsheet_path, :class => "button"
      %li.logout
        = link_to "Logout", user_session_path, :method => :delete, :class => "button"

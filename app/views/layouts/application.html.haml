!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      WebTrends Tagging System
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    / %link{ :href => "stylesheets/application.css", :rel => "stylesheet", :media => "screen", :type => "text/css" }
    /
      [if IE]>
      <link href="stylesheets/ie.css?1250365196" media="screen" rel="stylesheet" type="text/css" />
      <![endif]
    /
      [if IE 6]>
      <link href="stylesheets/ie6.css" media="screen" rel="stylesheet" type="text/css" />
      <![endif]
  %body
    #header
      %ul
        - Tag::PRODUCTS.each do |product|
          %li
            = link_to product, tags_path
    #page
      =show_flashes 
      = yield
    %script{ :src => "javascripts/jquery-1.3.2.js", :type => "text/javascript" }
    %script{ :src => "javascripts/application.js", :type => "text/javascript" }

!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      WebTrends Tracker
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    = stylesheet_link_tag "blueprint/screen.css", "application.css", :media => "screen, projection", :cache => true
    = stylesheet_link_tag "blueprint/print.css", :media => "print"
    /
      [if lt IE 8]>
      <link rel="stylesheet" href="css/blueprint/ie.css" type="text/css" media="screen, projection">
      <![endif]
    
    :javascript
      rails_authenticity_token = '#{form_authenticity_token}'
    
  %body
    #error_container
    .container
      %h1
        = link_to "WebTrends Tracker - Home", root_path, :id => "logo"
      #sub-container
        = render :partial => "layouts/top_nav"
        = show_flashes 
        - if logged_in?
          = render :partial => "layouts/authorized_view"
        - else
          = yield
    %script        
      = yield :js_data_load 
    = javascript_include_tag "jquery-1.4.2.min", "jquery-in-place-editor", "jquery.autocomplete", "application", :cache => true